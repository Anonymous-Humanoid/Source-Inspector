{
    "exec": "webpack -c",
    "verbose": true,
    "ignore": [
        "/dist",
        "/build",
        "/coverage",
        "/.vscode",
        "/.git",
        "/config"
    ],
    "watch": [
        "config/webpack.config.cjs",
        "src/react-app-env.d.ts",
        "package-lock.json",
        "tsconfig.json",
        ".babelrc"
    ],
    "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "ASSET_PATH": "/",
        "OUTPUT_DIR": "dist",
        "PACKAGE_NAME": "source-inspector",
        "PACKAGE_DESCRIPTION": "A from-scratch open-source document source inspector that aims to be invisible to websites"
    },
    "ext": "json,js,ts,babelrc"
}
